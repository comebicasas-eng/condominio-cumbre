---
import patron1 from '../assets/patronv.svg';
import patron2 from '../assets/patrona.svg';

const { spanText, h3Text, centerImg } = Astro.props;
---
<div class="flex justify-between h-12 md:h-20 lg:h-40 w-full overflow-hidden items-center">
  <img src={patron1.src} alt="" class="h-10 md:h-28 lg:h-56 2xl:h-72 w-auto object-cover object-top">
  <div class="text-center flex flex-col items-center justify-center h-full">
    {centerImg && <img src={centerImg} alt="Banner central" class="h-12 md:h-16 lg:h-32" />}
    {spanText && <span class="text-lg md:text-2xl lg:text-4xl 2xl:text-[40px] font-acummin-light text-primary uppercase">{spanText}</span>}
    {h3Text && <h3 class="text-2xl md:text-3xl lg:text-5xl 2xl:text-6xl font-cofo text-secondary uppercase">{h3Text}</h3>}
  </div>
  <img src={patron2.src} alt="" class="h-10 md:h-28 lg:h-56 2xl:h-72 w-auto">
</div>